#include <string.h>
#include <stdio.h>
//LEMBRAR DE CRIAR O ARQUIVO recordes.txt E TER 10 RECORDES BASE(NOM 0)
int main() {
    FILE *file = fopen("recordes.txt", "r");
    if (file == NULL) {
        printf("Erro ao abrir o arquivo.\n");
        return 1;
    }
    int i, j, aux;
    char auxNome[5];
    
    struct ranking{
    int pontuacao;
    char nome[12];
    };
    struct ranking info[11];
    // LEITURA DA STRING + PONTUAÇÃO
	    	if(fscanf(file, "%s %d", info[0].nome, &info[0].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[1].nome, &info[1].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[2].nome, &info[2].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[3].nome, &info[3].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[4].nome, &info[4].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[5].nome, &info[5].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[6].nome, &info[6].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[7].nome, &info[7].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[8].nome, &info[8].pontuacao) != 2 ||
			fscanf(file, "%s %d", info[9].nome, &info[9].pontuacao) != 2) {
			printf("Erro ao ler dados do arquivo.\n");
	  		fclose(file);
        		return 1;
    			}
	    fclose(file);
    // RECEBE O NOVO NOME + PONTUAÇÃO (AQUI ELE TEM QUE VERIFICAR ANTES SE
    // A PONTUAÇÃO OBTIDA ENTRA NOS RECORDES, MAS NÃO FIZ
    printf("Digite seu nome, exemplo: \'YUD:\'\n");
    scanf("%3s", info[10].nome);  // 4s ler sonente os 4 primeiros caracteres
    scanf("%d", &info[10].pontuacao);

    // ORDENAÇÃO DOS RECORDES
    for (i=0; i < 10; i++) {
        for (j= 0; j < 10 - i; j++) {
            if (info[j].pontuacao < info[j + 1].pontuacao) {
                // TROCA A PONTUACAO
                aux = info[j].pontuacao;
                info[j].pontuacao = info[j + 1].pontuacao;
                info[j + 1].pontuacao = aux;

                // TROCA O NOME
                strcpy(auxNome, info[j].nome);
                strcpy(info[j].nome, info[j + 1].nome);
                strcpy(info[j + 1].nome, auxNome);
            }
        }
    }

    // EXIBE A TABELA DOS RECORDES ATUALIZADA
    printf("-- RECORDES --\n");
    for (i = 0; i < 10; i++) {
        printf("%s: %d\n", info[i].nome, info[i].pontuacao);
    }

    // ABRE ARQUIVO
    file = fopen("recordes.txt", "w");
    if (file == NULL) {
        printf("Erro ao abrir o arquivo\n");
        return 1;
    }

    // ATUALIZA AS INFORMAÇÕES DO ARQUIVO
    for ( i = 0; i < 10; i++) {
        fprintf(file, "%s %d\n", info[i].nome, info[i].pontuacao);
    }

    fclose(file);

    printf("Recordes atualizados\n");

    return 0;
}
